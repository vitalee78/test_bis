// Check site www.bis077.ru
// Набор тестов для проверки функционала сайте, также личного кабинета.
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '5', artifactNumToKeepStr: '5'))
        timestamps()
    }
    triggers {
        cron('H 9 * * *')
    }
    stages {
        stage("Install packages && test") {
            steps {
                sh '''
                    virtualenv --python=python3 env
                    source env/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                    pytest --alluredir=allure-reports tests -E run -v
                '''
            }
          }
        }
    environment {
            EMAIL_TO = 'vitalee@bis077.ru'
        }
    post {
        failure {
            emailext body: 'Check console output at $BUILD_URL to view the results. \n\n ${CHANGES} \n\n -------------------------------------------------- \n${BUILD_LOG, maxLines=100, escapeHtml=false}',
                    to: EMAIL_TO,
                    subject: 'Тест не прошёл в Jenkins: $PROJECT_NAME - #$BUILD_NUMBER'
        }

        aborted {
            emailext body: 'Check console output at $BUILD_URL to view the results. \n\n ${CHANGES} \n\n -------------------------------------------------- \n${BUILD_LOG, maxLines=100, escapeHtml=false}',
                    to: EMAIL_TO,
                    subject: 'Тест остановлен в ручную в Jenkins: $PROJECT_NAME - #$BUILD_NUMBER'
        }
        always{
            script{
                allure([
                includeProperties: false,
                jdk: '',
                reportBuildPolicy: 'ALWAYS',
                results: [[path: 'allure-reports']]])
            }
        }
    }
}